---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
const posts = (await getCollection("blog"))
  .filter((val) => val.data.section == false)
  .sort((a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-dark-01 font-sans">
    <Header title={SITE_TITLE} />
    <main>
      <section class="max-w-screen-xl mx-auto px-4">
        <div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
          <h1
            class="mb-4 text-4xl font-bold tracking-tight leading-loose md:text-5xl lg:text-6xl text-white"
          >
            Unlock the Secrets <br /> of Challenging Projects!
          </h1>
          <p
            class="mb-8 text-lg font-normallg:text-xl sm:px-16 lg:px-48 text-light-01"
          >
            Prepare to unlock the mysteries behind advanced projects, one post
            at a time.
          </p>
        </div>
        <div class="grid grid-cols-3 gap-10">
          {
            posts.map((post) => (
              <div class="max-w-sm p-6 bg-dark-02 border border-gray-600 rounded-lg shadow">
                <a href={`/blog/${post.slug}/`}>
                  <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                    {post.data.title}
                  </h5>
                </a>
                <p class="mb-3 font-normal text-gray-400">
                  Here are the biggest enterprise technology acquisitions of
                  2021 so far, in reverse chronological order.
                </p>
                <a
                  href={`/blog/${post.slug}/`}
                  class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-primary-100 rounded-lg hover:bg-primary-100/90"
                >
                  Read more
                  <svg
                    class="w-3.5 h-3.5 ml-2"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 14 10"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M1 5h12m0 0L9 1m4 4L9 9"
                    />
                  </svg>
                </a>
              </div>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
